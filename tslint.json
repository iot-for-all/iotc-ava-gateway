{
    "extends": [
        "tslint:latest"
    ],
    "rules": {
        "no-floating-promises": true,
        "no-unused-expression": true,
        "no-duplicate-variable": true,
        "curly": true,
        "class-name": true,
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": true,
        "interface-name": [
            false
        ],
        "max-line-length": [
            true,
            200
        ],
        "quotemark": [
            true,
            "single"
        ],
        "ordered-imports": [
            false
        ],
        "object-literal-sort-keys": [
            false
        ],
        "arrow-parens": [
            false
        ],
        "max-classes-per-file": [
            false,
            1
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "one-line": [
            true,
            "check-open-brace"
        ],
        "no-consecutive-blank-lines": true,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type",
            "check-typecast",
            "check-preblock"
        ],
        "no-irregular-whitespace": true,
        "no-trailing-whitespace": true,
        "one-variable-per-declaration": [
            true
        ],
        "prefer-template": true,
        "space-before-function-paren": [true,
            {
                "asyncArrow": "always"
            }
        ]
    }
}
